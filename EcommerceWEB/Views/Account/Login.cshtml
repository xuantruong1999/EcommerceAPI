@model EcommerceAPI.Model.UserLoginViewModel

@{ 
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";

}
@section Styles{ 
    <link href="~/css/login.css" rel="stylesheet" />
}

<div class="center-screen">
    <form asp-action="Login" asp-route-returnurl="@Model.ReturnURL" class="p-3 border box-shadow rounded m-auto">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h1 class="text-center">Login</h1>
        <div class="form-group">
            <label>User Name or Email:</label>
            <input class="form-control" type="text" name="@nameof(@Model.UserNameOrEmail)" value="" />
        </div>
        <div class="form-group">
            <label>Password:</label>
            <input class="form-control" type="password" name="@nameof(@Model.Password)" value="" />
        </div>
        <div class="form-group">
            <div class="form-check">
                <input class="form-check-input" asp-for="RememberMe" type="checkbox" name="@nameof(@Model.RememberMe)" value="true" />
                <label class="form-check-label">Remember me?</label>
            </div>
        </div> 
        
        <input type="submit" class="btn btn-primary" value="Sign in" /> 
    </form>
</div>
