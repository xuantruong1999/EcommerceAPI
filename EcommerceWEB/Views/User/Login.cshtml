@model UserLoginViewModel

@{ 
    ViewData["Title"] = "Login";
    
}
@section Styles{ 
    <link href="~/css/login.css" rel="stylesheet" />
}

<div class="d-flex justify-content-center m-auto">
    <form method="post" action="/user/login" class="p-3 border box-shadow rounded">
        <h1 class="text-center">Login</h1>
        <div class="form-group">
            <label>User Name or Email:</label>
            <input class="form-control" type="text" name="@nameof(@Model.UserNameOrEmail)" value="" />
        </div>
        <div class="form-group">
            <label>Password:</label>
            <input class="form-control" type="password" name="@nameof(@Model.Password)" value="" />
        </div>
        <input type="submit" value="Sign in" />
    </form>
</div>
